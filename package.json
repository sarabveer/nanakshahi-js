{
  "name": "nanakshahi",
  "version": "2.3.1",
  "description": "A JavaScript Library to get Nanakshahi Dates and Gurpurabs",
  "main": "dist/index.min.js",
  "unpkg": "dist/index.min.js",
  "runkitExampleFilename": "example.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode production",
    "build-docs": "jsdoc2md --template README.hbs lib/**/*.js > README.md &&  markdown-toc -i README.md ",
    "lint": "eslint .",
    "precommit": "npm run lint && npm run build-docs && git add README.md",
    "release": "release-it"
  },
  "pre-commit": [
    "precommit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sarabveer/nanakshahi-js.git"
  },
  "author": "Sarabveer Singh <me@sarabveer.me> (https://sarabveer.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sarabveer/nanakshahi-js/issues"
  },
  "homepage": "https://github.com/Sarabveer/nanakshahi-js#readme",
  "dependencies": {
    "julian": "^0.2.0",
    "kollavarsham": "^1.1.3",
    "leap-year": "^2.0.1",
    "months": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "babel-loader": "^8.0.4",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "jsdoc-to-markdown": "^4.0.1",
    "markdown-toc": "^1.2.0",
    "pre-commit": "^1.2.2",
    "release-it": "^9.0.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "release-it": {
    "scripts": {
      "beforeStage": "npm run build"
    },
    "npm": {
      "publish": true,
      "access": "public"
    },
    "github": {
      "release": true,
      "assets": [
        "dist/index.min.js"
      ]
    }
  },
  "keywords": [
    "nanakshahi",
    "sikhi",
    "sikhism",
    "sikh",
    "sikh-holidays",
    "nanakshahi-api",
    "bikrami",
    "vikrami",
    "gurpurab",
    "gurpurabs",
    "gurmukhi"
  ],
  "directories": {
    "lib": "lib"
  }
}
